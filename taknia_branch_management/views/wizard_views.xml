<odoo>
    <record id="view_report_wizard_form" model="ir.ui.view">
        <field name="name">report.wizard.form</field>
        <field name="model">taknia.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Report">
                <sheet>
                    <group>
                        <field name="report_type"/>
                    </group>
                    <footer>
                        <button string="Generate" type="object" name="generate_report" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>